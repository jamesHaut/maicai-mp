<van-cell-group custom-class="field_box">
  <van-field
    value="{{ name }}"
    placeholder="请填写姓名"
    label="联系人"
    data-key="name"
    bind:change="onChange"
  />
  <van-field
    value="{{ mobile }}"
    placeholder="请填写手机号"
    label="手机号"
    type="tel"
    maxlength="{{ 11 }}"
    data-key="mobile"
    bind:change="onChange"
  />
  <picker bind:change="_pickerChange" value="{{ areaIndex }}" range="{{ areaList }}" range-key="name">
    <van-cell
      title="收货地址"
      value="{{ areaList[areaIndex].name }}"
      clickable
      title-class="areaTitle"
      value-class="areaValue"
    />
  </picker>
  <van-field
    value="{{ address }}"
    label="详细地址"
    placeholder="街道、楼号、房号等"
    data-key="address"
    bind:change="onChange"
  />
  <van-cell
    title="设为默认"
    center
  >
    <view class="switchValue">
      <van-switch active-color="#20c064" size="22px" checked="{{ prime }}" active-value="{{ 1 }}" inactive-value="{{ 0 }}" bind:change="onSwitch" />
    </view>
  </van-cell>
</van-cell-group>
<view class="btns">
  <van-button loading="{{ saving }}" block round color="#20c064" custom-class="btn" bind:click="_addOrUpdateAddress">保存</van-button>
  <van-button wx:if="{{ id }}" block round custom-class="btn" bind:click="_deleteAddress">删除</van-button>
</view>