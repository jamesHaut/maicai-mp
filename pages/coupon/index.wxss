.tabs {
  line-height: 100rpx;
  display: flex;
  flex-flow: row nowrap;
  background: #ffffff;
}
.tabs .tabs_item {
  flex: 0 0 25%;
  text-align: center;
  font-size: 28rpx;
  position: relative;
}
.tabs .tabs_item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  width: 80%;
  left: 0;
  right: 0;
  margin: auto;
  height: 3px;
  background: #20c064;
  border-radius: 3px;
}
.content {
  position: absolute;
  top: 100rpx;
  bottom: 0;
  left: 0;
  right: 0;
}