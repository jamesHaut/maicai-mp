<!-- index.wxml -->
<view class="topbar {{ topbarStyle? 'van-hairline--bottom': '' }}" style="background-color: {{ topbarStyle }}">
  <view class="location-box">
    <van-icon name="location-o" />
    <text class="van-ellipsis">您当前的位置信息展示过长显示省略号</text>
    <van-icon name="arrow-down" />
  </view>
  <navigator class="search-box" url="/pages/search/index">
    <van-icon name="search" />
    <text>输入商品名称</text>
  </navigator>
</view>
<view class="swiper">
  <swiper indicator-dots autoplay circular indicator-active-color="#20c064">
    <block wx:for="{{ bannerList }}" wx:key="index">
      <swiper-item>
        <view class="swiper-item">
          <image src="{{item.realm + item.picUrl}}" mode="aspectFill" />
        </view>
      </swiper-item>
    </block>
  </swiper>
</view>
<view class="grid">
  <van-grid column-num="5" border="{{ false }}" clickable>
    <block wx:for="{{ category }}" wx:key="index">
      <van-grid-item use-slot data-id="{{item.id}}" bind:tap="_switchClassify">
        <view class="grid-item">
          <view class="grid-item_img">
            <view class="grid-item_img_content">
              <my-image src="{{item.url}}" round mode="aspectFill"></my-image>
            </view>
          </view>
          <text>{{item.name}}</text>
        </view>
      </van-grid-item>
    </block>
  </van-grid>
</view>
<view class="list">
  <view class="recommend-box">
    <view class="recommend">推荐商品</view>
  </view>
  <pdt-list list="{{ list }}" is-no-more="{{ isNoMore }}" bind:addSuccess="_addSuccess" bind:addError="_addError" />
</view>
<van-toast id="van-toast" />