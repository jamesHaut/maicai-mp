.pdt-item {
  border-radius: 8rpx;
  box-shadow: 0 0 2px rgba(0, 0, 0, .2);
  padding: 8rpx;
  overflow: hidden;
}
.img-box {
  height: 0;
  padding-bottom: 100%;
  position: relative;
}
.img-box .img-content {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
}
.name-box {
  height: 90rpx;
  padding: 0 12rpx;
  line-height: 0;
  margin-top: 10rpx;
}
.name-box .name {
  line-height: 34rpx;
  font-weight: 400;
  font-size: 28rpx;
}
.name-box .specs {
  font-size: 24rpx;
  line-height: 28rpx;
  display: inline-block;
  margin-left: 10rpx;
}
.name-box .title {
  line-height: 28rpx;
  font-weight: 300;
  font-size: 24rpx;
}
.amt-box {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  position: relative;
  margin-top: 30rpx;
  padding: 0 12rpx;
}
.amt-box .price {
  position: absolute;
  top: 0;
  left: 12rpx;
  right: 0;
  height: 30rpx;
  transform: translateY(-100%);
  font-size: 24rpx;
  color: #666;
}
.amt-box .price .line-through {
  display: inline-block;
  text-decoration: line-through;
}
.amt-box .rulingPrice {
  font-size: 38rpx;
  color: #ec132d;
  font-weight: 400;
}
.amt-box .rulingPrice > text {
  display: inline-block;
}
.currency, .small {
  font-size: 24rpx;
}
.amt-box .cart {
  line-height: 0;
}